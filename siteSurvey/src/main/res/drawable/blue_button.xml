<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
           <solid android:color="#00aedb" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="15dp"
                android:top="10dp"
                android:right="15dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <solid android:color="#00aedb" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="20dp"
                android:top="10dp"
                android:right="20dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <solid android:color="#00aedb" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="20dp"
                android:top="10dp"
                android:right="20dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>