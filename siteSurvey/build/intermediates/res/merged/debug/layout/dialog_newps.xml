<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
    	android:gravity="center"
        android:textSize="16sp"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:text="@string/newps_add_polling_station"
		android:background="@drawable/labelbackground"/>

    <EditText
        android:id="@+id/title"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="@string/newps_name"/>

    <EditText
        android:id="@+id/address"
        android:inputType="textAutoComplete|textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:hint="@string/newps_address"
        android:lines="2"/>

    <TextView
        android:id="@+id/lon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:inputType="none"
        android:hint="@string/newps_retrievingLon"/>

    <TextView
        android:id="@+id/lat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:inputType="none"
        android:hint="@string/newps_retrievingLon"/>
</LinearLayout><!-- From: file:/C:/Users/Reynaldo/StudioProjects/SiteSurvey/siteSurvey/src/main/res/layout/dialog_newps.xml -->